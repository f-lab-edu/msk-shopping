<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.flab.msk_shopping.auth.jwt.repository.AccessTokenRepository">

    <insert id="addAccessToken">
        INSERT INTO access_token (user_id, token_value, expiration)
        VALUES (#{userId}, #{tokenValue}, #{expiration})
    </insert>

    <delete id="deleteAccessTokenByUserId">
        DELETE
        FROM access_token
        WHERE user_id = #{userId}
    </delete>
    <delete id="deleteAccessTokenByTokenValue">
        DELETE
        FROM access_token
        WHERE token_value = #{accessToken}
    </delete>


    <select id="findAccessTokenByTokenValue"
            resultType="com.flab.msk_shopping.auth.jwt.controller.dto.AccessTokenDto">
        SELECT
            user_id AS userId,
            token_value AS tokenValue,
            expiration
        FROM access_token
        WHERE token_value = #{accessToken}
    </select>

    <select id="findAccessTokenByMemberId"
            resultType="com.flab.msk_shopping.auth.jwt.controller.dto.AccessTokenDto">
        SELECT
            user_id AS userId,
            token_value AS tokenValue,
            expiration
        FROM access_token
        WHERE token_value = #{memberId}
    </select>

